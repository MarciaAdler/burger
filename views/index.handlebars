<!--Setup the index.handlebars to have the template that Handlebars can render onto.

Create a button in index.handlebars that will submit the user input into the database.-->
<h1>Eat-Da-Burger!</h1>

<img
    src="https://media1.s-nbcnews.com/j/newscms/2019_21/2870431/190524-classic-american-cheeseburger-ew-207p_d9270c5c545b30ea094084c7f2342eb4.fit-760w.jpg" />
<ol id="notdevoured">
    {{#each burgers}}
    {{#unless devoured }}
    <li>
        <p>
            {{this.burger_name}}

            <button data-burgerid="{{this.id}}" class="devour">Devour!</button>
        </p>
    </li>
    {{/unless}}
    {{/each}}
</ol>

<ol id="devoured">
    {{#each burgers}}
    {{#if devoured }}
    <li>
        <p>
            {{this.burger_name}}

        </p>
    </li>
    {{/if}}
    {{/each}}
</ol>

<h2>Add a Burger</h2>
<form id="addBurger" class="button-size">
    <textarea type="text" name="burger"></textarea>
    <button type="submit">Added Burger!</button>
</form>

<script>
    $("#addBurger").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        // [name=plan] will find an element with a "name" attribute equal to the string "burger"
        var newBurger = {
            burger: $("#addBurger [name=burger]").val().trim()
        };

        // Send the POST request.
        $.ajax("/api/burgers", {
            type: "POST",
            data: newBurger
        }).then(
            function () {
                console.log("added New Burger");
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });
    $(".devour").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();
        console.log('click')
        // Get the ID by finding an element with a "name" attribute equal to the string "id"
        var id = $("[name=burgerid]").val().trim();


        // Send the PUT request.
        $.ajax("/api/movies/" + id, {
            type: "PUT",
        }).then(
            function () {
                console.log("updated id ", id);
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });
</script>